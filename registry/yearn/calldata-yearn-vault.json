  "display": {
    "formats": {
      "deposit(uint256)": {
        "intent": "Deposit tokens into Yearn vault",
        "fields": [
          {
            "path": "#.amount",
            "label": "Deposit Amount",
            "format": "amount"
          }
        ],
        "required": ["amount"]
      },
      "deposit(uint256,address)": {
        "intent": "Deposit tokens into Yearn vault for recipient",
        "fields": [
          {
            "path": "#.amount",
            "label": "Deposit Amount",
            "format": "amount"
          },
          {
            "path": "#.recipient",
            "label": "Recipient",
            "format": "addressName"
          }
        ],
        "required": ["amount", "recipient"]
      },
      "withdraw(uint256)": {
        "intent": "Withdraw tokens from Yearn vault",
        "fields": [
          {
            "path": "#.maxShares",
            "label": "Max Shares to Burn",
            "format": "amount"
          }
        ],
        "required": ["maxShares"]
      },
      "withdraw(uint256,address)": {
        "intent": "Withdraw tokens from Yearn vault to recipient",
        "fields": [
          {
            "path": "#.maxShares",
            "label": "Max Shares to Burn",
            "format": "amount"
          },
          {
            "path": "#.recipient",
            "label": "Recipient",
            "format": "addressName"
          }
        ],
        "required": ["maxShares", "recipient"]
      },
      "withdraw(uint256,address,uint256)": {
        "intent": "Withdraw exact amount from Yearn vault",
        "fields": [
          {
            "path": "#.maxShares",
            "label": "Max Shares to Burn",
            "format": "amount"
          },
          {
            "path": "#.recipient",
            "label": "Recipient",
            "format": "addressName"
          },
          {
            "path": "#.maxLoss",
            "label": "Max Loss (BPS)",
            "format": "raw"
          }
        ],
        "required": ["maxShares", "recipient", "maxLoss"]
      },
      "redeem(uint256)": {
        "intent": "Redeem vault shares for underlying tokens",
        "fields": [
          {
            "path": "#.shares",
            "label": "Shares to Redeem",
            "format": "amount"
          }
        ],
        "required": ["shares"]
      },
      "redeem(uint256,address)": {
        "intent": "Redeem vault shares for underlying tokens to recipient",
        "fields": [
          {
            "path": "#.shares",
            "label": "Shares to Redeem",
            "format": "amount"
          },
          {
            "path": "#.recipient",
            "label": "Recipient",
            "format": "addressName"
          }
        ],
        "required": ["shares", "recipient"]
      },
      "redeem(uint256,address,uint256)": {
        "intent": "Redeem vault shares with max loss protection",
        "fields": [
          {
            "path": "#.shares",
            "label": "Shares to Redeem",
            "format": "amount"
          },
          {
            "path": "#.recipient",
            "label": "Recipient",
            "format": "addressName"
          },
          {
            "path": "#.maxLoss",
            "label": "Max Loss (BPS)",
            "format": "raw"
          }
        ],
        "required": ["shares", "recipient", "maxLoss"]
      }
